<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  		    http://www.springframework.org/schema/context
  		    http://www.springframework.org/schema/context/spring-context-3.0.xsd
  		    http://www.springframework.org/schema/jee
  		    http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
  		    http://www.springframework.org/schema/tx
  		    http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
  		    http://www.springframework.org/schema/aop
  		    http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
  		    http://www.springframework.org/schema/util
  		    http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<!-- Annotation based controllers -->
	<bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping"/>
	
	<context:component-scan base-package="org.openmrs.module.atd.web.controller" />
	
	<bean id="atdUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/module/@MODULE_ID@/editFields.form">editFields</prop>            
                <prop key="/module/@MODULE_ID@/editForms.form">editForms</prop>            
                <prop key="/module/@MODULE_ID@/printerFormSelectionForm.form">printerFormSelectionForm</prop>
                <prop key="/module/@MODULE_ID@/printerLocationForm.form">printerLocationForm</prop>             
                <prop key="/module/@MODULE_ID@/updateForm.form">updateForm</prop>
                <prop key="/module/@MODULE_ID@/clinicPrinterConfigForm.form">clinicPrinterConfigForm</prop>
                <prop key="/module/@MODULE_ID@/configurationManager.form">configurationManager</prop>
                <prop key="/module/@MODULE_ID@/createClinicForm.form">createClinicForm</prop>
                <prop key="/module/@MODULE_ID@/chooseLocation.form">chooseLocation</prop>
                <prop key="/module/@MODULE_ID@/getFormByName.form">getFormByName</prop>
                <prop key="/module/@MODULE_ID@/exportFormCSV.form">exportFormCSV</prop>
                <prop key="/module/@MODULE_ID@/exportConceptCSV.form">exportConceptCSV</prop>
                <prop key="/module/@MODULE_ID@/exportFormDefinitionCSV.form">exportFormDefinitionCSV</prop> 
                <prop key="/module/@MODULE_ID@/operationSuccess.form">operationSuccess</prop>               
            </props>
        </property>
    </bean>
    
    <bean id="editForms" class="org.openmrs.module.atd.web.EditFormsController">
        <property name="commandName"><value>EditFormsObject</value></property>
        <property name="formView"><value>/module/@MODULE_ID@/editForms</value></property>
        <property name="successView"><value>editForms.form</value></property>
    </bean>
    <bean id="editFields" class="org.openmrs.module.atd.web.EditFieldsController">
        <property name="commandName"><value>EditFieldsObject</value></property>
        <property name="formView"><value>/module/@MODULE_ID@/editFields</value></property>
        <property name="successView"><value>configurationManagerSuccess.form</value></property>
    </bean>
    
    <bean id="chooseLocation" class="@MODULE_PACKAGE@.web.ChooseLocationController">
        <property name="commandName"><value>chooseLocationObject</value></property>
        <property name="formView"><value>/module/@MODULE_ID@/chooseLocation</value></property>
        <property name="successView"><value>configFormAttributeValue.form</value></property>
    </bean> 
    
    <bean id="printerFormSelectionForm" class="@MODULE_PACKAGE@.web.PrinterFormSelectionFormController">
        <property name="commandName"><value>printerFormSelectionFormObject</value></property>
        <property name="formView"><value>/module/@MODULE_ID@/printerFormSelectionForm</value></property>
        <property name="successView"><value>printerLocationForm.form</value></property>
    </bean>
    
    <bean id="printerLocationForm" class="@MODULE_PACKAGE@.web.PrinterLocationFormController">
        <property name="commandName"><value>printerLocationFormObject</value></property>
        <property name="formView"><value>/module/@MODULE_ID@/printerLocationForm</value></property>
        <property name="successView"><value>configurationManagerSuccess.form</value></property>
    </bean>
    <bean id="updateForm" class="@MODULE_PACKAGE@.web.UpdateFormController">
        <property name="commandName"><value>updateFormObject</value></property>
        <property name="formView"><value>/module/@MODULE_ID@/updateForm</value></property>
        <property name="successView"><value>updateFieldsForm.form</value></property>
    </bean>
    <bean id="clinicPrinterConfigForm" class="@MODULE_PACKAGE@.web.ClinicPrinterConfigFormController">
        <property name="commandName"><value>clinicPrinterConfigFormObject</value></property>
        <property name="formView"><value>/module/@MODULE_ID@/clinicPrinterConfigForm</value></property>
        <property name="successView"><value>configurationManagerSuccess.form</value></property>
    </bean>
    <bean id="configurationManager" class="@MODULE_PACKAGE@.web.ConfigurationManagerController">
        <property name="commandName"><value>configurationManagerObject</value></property>
        <property name="formView"><value>/module/@MODULE_ID@/configurationManager</value></property>
        <property name="successView"><value>configurationManager.form</value></property>
    </bean>

    <bean id="getFormByName" class="@MODULE_PACKAGE@.web.GetFormByNameController">
        <property name="commandName"><value>getFormByNameObject</value></property>
        <property name="formView"><value>/module/@MODULE_ID@/getFormByName</value></property>
        <property name="successView"><value>operationSuccess.form</value></property>
    </bean>
    <bean id="createClinicForm" class="@MODULE_PACKAGE@.web.CreateClinicFormController">
        <property name="commandName"><value>createClinicFormObject</value></property>
        <property name="formView"><value>/module/@MODULE_ID@/createClinicForm</value></property>
        <property name="successView"><value>configurationManagerSuccess.form</value></property>
    </bean>
    <bean id="exportFormCSV" class="@MODULE_PACKAGE@.web.ExportFormCSVController">
        <property name="commandName"><value>exportFormCSVObject</value></property>
        <property name="formView"><value>/module/@MODULE_ID@/exportFormCSV</value></property> 
        <property name="successView"><value>operationSuccess.form</value></property>
    </bean> 
    <bean id="exportConceptCSV" class="@MODULE_PACKAGE@.web.ExportConceptCSVController">
        <property name="commandName"><value>exportConceptCSVObject</value></property>
        <property name="formView"><value>/module/@MODULE_ID@/exportConceptCSV</value></property> 
        <property name="successView"><value>operationSuccess.form</value></property>
    </bean>
    <bean id="exportFormDefinitionCSV" class="@MODULE_PACKAGE@.web.ExportFormDefinitionCSVController">
        <property name="commandName"><value>exportFormDefinitionCSVObject</value></property>
        <property name="formView"><value>/module/@MODULE_ID@/exportFormDefinitionCSV</value></property> 
        <property name="successView"><value>operationSuccess.form</value></property>
    </bean>
    <bean id="operationSuccess" class="@MODULE_PACKAGE@.web.OperationSuccessController">
        <property name="commandName"><value>operationSuccessObject</value></property>
        <property name="formView"><value>/module/@MODULE_ID@/operationSuccess</value></property> 
        <property name="successView"><value>configurationManager.form</value></property>
    </bean>
 
</beans>
